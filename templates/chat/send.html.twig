<form method="post">
    <input type="hidden" name="status" value="true">
    <button type="submit">Send Message</button>
</form>

<h2>Messages:</h2>
<ul>
    {% for message in messages %}
        <li>{{ message.id }} - {{ message.status ? 'True' : 'False' }} - {{ message.sent ? 'Sent' : 'Not Sent' }}</li>
    {% endfor %}
</ul>
